<section class="orders-show">
  <header class="page-header">
    <h1>Order Number #<%= @order.id %> </h1>
  </header>

  <div class="order-summary jumbotron">
    <h3>Thank you for your order <%= (current_user) ? current_user.first_name : "Guest User"%>!</h3>
    <p>Order confirmation sent to email: <%= (current_user) ? current_user.email : "guest@example.com"%></p>

    <%# Sample from my cart view %>
    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "orders/line_item", collection: @line_items %> 
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              $<%= @order.total_cents / 100.0 %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>
